{lib, config, ...}: 
let cfg = config.personal; in {
  imports = [];

  options = {
    personal.enable = lib.mkEnableOption "Enable Personal";
  };

  config = lib.mkIf cfg.enable {
    home.packages = [
      darwin.lsusb
      gnuradio
    ];

    programs.git.extraConfig = {
      gpg = {
        format = "ssh";
      };
      "gpg \"ssh\"" = {
        program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign";
      };
      commit = {
        gpgsign = true;
      };
      user = {
        signingKey = "ssh-rsa ";
      };
    };
  };
}
